<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iotek.dao.OrderListMapper">
        <resultMap id="orderListMap" type="OrderList">
            <id column="id" property="id"></id>
            <result column="customer_id" property="customerId"></result>
            <result column="total_money" property="totalMoney"></result>
            <result column="address_id" property="addressId"></result>
            <result column="order_is_pay" property="orderIsPay"></result>
            <result column="order_is_transport" property="orderIsTransport"></result>
            <result column="order_create_time" property="orderCreateTime"></result>
            <result column="order_modified_time" property="orderModifiedTime"></result>
            <collection property="orderItemList" ofType="OrderItem" column="{id=id}" select="com.iotek.dao.OrderItemMapper.findOrderItemByOrderListId"></collection>
        </resultMap>
    <select id="findOrderListByCId" parameterType="Customer" resultMap="orderListMap">
        SELECT * FROM SCBIOSUN.ORDER_LIST WHERE CUSTOMER_ID=#{id}
    </select>
</mapper>