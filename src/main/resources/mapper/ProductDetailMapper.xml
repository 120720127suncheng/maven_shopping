<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iotek.dao.ProductDetailMapper">
    <resultMap id="productDetailMap" type="ProductDetail">
        <id column="id" property="id"></id>
        <result column="product_id" property="productId"></result>
        <result column="small_image" property="productSmallPhoto"></result>
        <result column="big_image" property="productBigPhoto"></result>
        <result column="product_caption" property="productCaption"></result>
    </resultMap>
    <select id="queryProductDetailByPId" parameterType="ProductDetail" resultMap="productDetailMap">
        SELECT * FROM PRODUCT_DETAIL WHERE PRODUCT_ID=#{productId}
    </select>
</mapper>